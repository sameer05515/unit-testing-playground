{
  "name": "md-markdown-viewer",
  "version": "1.0.0",
  "description": "Markdown explorer powered by Express, EJS, Tailwind, and Alpine.",
  "main": "src/app.js",
  "scripts": {
    "dev": "concurrently \"npm run tailwind:watch\" \"nodemon src/app.js\"",
    "start": "node src/app.js",
    "tailwind:build": "tailwindcss -i ./src/styles/tailwind.css -o ./public/css/styles.css --minify",
    "tailwind:watch": "tailwindcss -i ./src/styles/tailwind.css -o ./public/css/styles.css --watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "marked": "^17.0.1",
    "marked-highlight": "^2.2.3",
    "prismjs": "^1.30.0",
    "redoc-express": "^2.1.0",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "concurrently": "^9.0.1",
    "nodemon": "^3.1.7",
    "tailwindcss": "^3.4.15"
  }
}

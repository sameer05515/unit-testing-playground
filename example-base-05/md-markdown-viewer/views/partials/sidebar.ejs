      <aside
        class="border-b border-slate-800 lg:border-b-0 lg:border-r border-slate-800 bg-slate-900/40 overflow-y-auto scroll-y transition-all duration-300 ease-out"
        x-show="sidebarOpen"
        x-transition:enter="transition ease-out duration-200"
        x-transition:enter-start="opacity-0 -translate-x-4"
        x-transition:enter-end="opacity-100 translate-x-0"
        x-transition:leave="transition ease-in duration-150"
        x-transition:leave-start="opacity-100 translate-x-0"
        x-transition:leave-end="opacity-0 -translate-x-4"
      >
        <div class="h-full px-4 py-4 space-y-4 lg:space-y-3">
          <div class="space-y-2">
            <label class="text-xs uppercase tracking-wide text-slate-400">Quick filter</label>
            <input
              x-model="filter"
              type="search"
              placeholder="Type to filter..."
              class="w-full rounded border border-slate-700 bg-slate-900/80 px-3 py-2 text-sm text-slate-100 placeholder:text-slate-500 focus:border-indigo-400 focus:outline-none"
            />
          </div>

          <ul class="space-y-1 divide-y divide-slate-800 overflow-y-auto scroll-y">
            <% files.forEach(function(file){ %>
            <li
              class="pt-2 first:pt-0"
              data-name="<%= file.name.toLowerCase() %> <%= file.relativePath.toLowerCase() %>"
              x-show="!filter || $el.dataset.name.includes(filter.toLowerCase())"
            >
              <% const isActive = activeFile && activeFile.slug === file.slug; %>
              <a
                href="/?slug=<%= file.slug %>"
                class="group block rounded-lg border px-3 py-2 transition hover:border-indigo-500 hover:bg-slate-900/70 <%= isActive ? 'ring-1 ring-indigo-400 border-indigo-400 bg-slate-900/90' : 'border-transparent' %>"
              >
                <p class="text-sm font-semibold text-slate-100 group-hover:text-white"><%= file.name %></p>
                <p class="text-xs text-slate-500 group-hover:text-slate-300 truncate"><%= file.relativePath %></p>
              </a>
            </li>
            <% }) %>
            <% if (!files.length) { %>
            <li class="rounded border border-dashed border-slate-700 px-3 py-4 text-sm text-slate-400">
              No markdown files found. Update <code class="font-mono text-slate-200">configuration.js</code>.
            </li>
            <% } %>
          </ul>
        </div>
      </aside>


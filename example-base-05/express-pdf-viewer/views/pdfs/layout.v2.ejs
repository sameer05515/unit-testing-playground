<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Express App</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/2.16.105/pdf.min.js"></script>
    <style>
      body {
        background-color: black;
      }
      .file-list {
        max-height: calc(100vh - 60px);
        overflow-y: auto;
      }
      .pdf-container {
        min-height: calc(100vh - 60px);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        overflow: auto;
        background: #222;
        padding: 10px;
      }
      canvas {
        max-width: 100%;
        height: auto;
        border: 1px solid #ddd;
        background: white;
      }
    </style>
  </head>
  <body x-data="{ showList: window.innerWidth > 768 }">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary p-2 shadow">
      <a class="navbar-brand fw-bold" href="/">üìÇ My App</a>

      <div class="d-flex flex-grow-1 justify-content-center">
        <% if (details) { %>
        <span class="badge bg-light text-dark p-2 rounded">
          <strong><%= slug %></strong> &middot; <%= details.currentIndex + 1 %> / <%= files.length %>
        </span>
        <% } %>
      </div>

      <div class="d-flex gap-2">
        <button class="btn btn-light" @click="showList = !showList">
          <span x-text="showList ? 'üìÇ Hide List' : 'üìÇ Show List'"></span>
        </button>
        <% if (details) { %>
        <a href="/pdf-viewer/v2/?slug=<%= details.prevSlug %>" title="Prev" class="btn btn-outline-light">‚è™</a>
        <a href="/pdf-viewer/v2/?slug=<%= details.nextSlug %>" title="Next" class="btn btn-outline-light">‚è©</a>
        <% } %>
      </div>
    </nav>

    <!-- Main Container -->
    <div class="container-fluid mt-1">
      <div class="row">
        <!-- Sidebar (File List) -->
        <div id="listCol" x-show="showList" x-transition class="col-md-3 col-lg-2 file-list bg-dark text-white p-2">
          <ul class="list-group">
            <% files.forEach(file => { %>
            <li class="text-break list-group-item bg-dark border-light <%= slug === file.slug ? 'active' : '' %>">
              <a href="/pdf-viewer/v2/?slug=<%= file.slug %>" class="text-decoration-none text-light d-block p-2">
                <%= file.slug %>
              </a>
            </li>
            <% }); %>
          </ul>
        </div>

        <!-- PDF Viewer using PDF.js -->
        <div id="contentCol" :class="showList ? 'col-md-9 col-lg-10' : 'col-12'" class="pdf-container">
          <% if (details) { %>
          <canvas id="pdfViewer"></canvas>
          <script>
            document.addEventListener("DOMContentLoaded", function () {
              const url = "/pdf-viewer/v2/pdf/<%= slug %>"; // PDF URL
              const canvas = document.getElementById("pdfViewer");
              const ctx = canvas.getContext("2d");

              pdfjsLib.getDocument(url).promise.then(pdf => {
                pdf.getPage(1).then(page => {
                  const viewport = page.getViewport({ scale: 1.5 });

                  // Adjust canvas size
                  canvas.width = viewport.width;
                  canvas.height = viewport.height;

                  // Render PDF page into canvas
                  page.render({ canvasContext: ctx, viewport: viewport });
                });
              });

              // Adjust canvas size on window resize
              window.addEventListener("resize", () => {
                if (canvas) {
                  const parentWidth = document.getElementById("contentCol").offsetWidth;
                  canvas.style.width = parentWidth + "px";
                }
              });
            });
          </script>
          <% } else { %>
          <p class="text-muted">Select a file to view details.</p>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>

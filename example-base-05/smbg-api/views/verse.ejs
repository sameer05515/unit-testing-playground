<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Shrimad Bhagwat Geeta</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .verse-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        .sanskrit-line {
            font-family: 'Noto Sans Devanagari', 'Arial Unicode MS', sans-serif;
            font-size: 1.25rem;
            line-height: 1.8;
            color: #1a1a1a;
            margin-bottom: 0.5rem;
        }
        .transliteration-line {
            font-size: 1.1rem;
            line-height: 1.8;
            color: #4a5568;
            font-style: italic;
            margin-bottom: 0.5rem;
        }
        .verse-block {
            min-height: 100px;
        }
        .commentary-block {
            line-height: 1.8;
        }
        .commentary-highlight {
            background-color: #fef3c7;
            padding: 1rem;
            border-left: 4px solid #f59e0b;
            border-radius: 4px;
        }
        .audio-wrapper {
            margin-bottom: 1rem;
        }
        .audio-wrapper audio {
            width: 100%;
        }
    </style>
</head>
<body class="bg-light">
    <section class="verse-page py-4">
        <div class="container">
            <div class="row g-4">
                <!-- Verse Header -->
                <div class="col-12">
                    <div class="verse-header p-4 rounded text-white">
                        <div class="d-flex flex-column flex-lg-row justify-content-between gap-3 align-items-lg-center">
                            <div>
                                <p class="text-uppercase small text-white-50 mb-1">
                                    <%= chapterTitle || chapter.chapterTitle %>
                                </p>
                                <h1 class="h2 mb-0"><%= verse.verseHeader %></h1>
                            </div>
                            <div class="d-flex flex-wrap gap-2">
                                <a href="/chapters/<%= chapter.id %>" class="btn btn-outline-light btn-sm">
                                    <span class="icon-inline" aria-hidden="true">‚Ü©Ô∏è</span>
                                    <span class="ms-1">Back to Chapter</span>
                                </a>
                                <% if (verse.previousVerseRoute) { %>
                                    <a href="<%= verse.previousVerseRoute %>" class="btn btn-light btn-sm">
                                        <span class="icon-inline" aria-hidden="true">‚óÄÔ∏è</span>
                                        <span class="ms-1">Previous</span>
                                    </a>
                                <% } %>
                                <% if (verse.nextVerseRoute) { %>
                                    <a href="<%= verse.nextVerseRoute %>" class="btn btn-light btn-sm">
                                        <span class="icon-inline" aria-hidden="true">‚ñ∂Ô∏è</span>
                                        <span class="ms-1">Next</span>
                                    </a>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Left Column: Sanskrit and Transliteration -->
                <div class="col-lg-6">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body">
                            <h2 class="h5 text-primary fw-semibold mb-3">‡§∂‡•ç‡§≤‡•ã‡§ï</h2>
                            <div class="verse-block mb-4">
                                <% if (verse.shlok && verse.shlok.length > 0) { %>
                                    <% verse.shlok.forEach(line => { %>
                                        <div class="sanskrit-line"><%= line.value %></div>
                                    <% }); %>
                                <% } else { %>
                                    <p class="text-muted">Sanskrit text not available</p>
                                <% } %>
                            </div>
                            
                            <h2 class="h5 text-primary fw-semibold mb-3">Transliteration</h2>
                            <div class="verse-block">
                                <% if (verse.shlokEng && verse.shlokEng.length > 0) { %>
                                    <% verse.shlokEng.forEach(line => { %>
                                        <div class="transliteration-line"><%= line.value %></div>
                                    <% }); %>
                                <% } else { %>
                                    <p class="text-muted">Transliteration not available</p>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Right Column: Audio, Meaning, Translation, Commentary -->
                <div class="col-lg-6">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body d-flex flex-column gap-4">
                            <!-- Audio Recitation -->
                            <% if (verse.shlokPath) { %>
                                <div>
                                    <h2 class="h5 text-primary fw-semibold mb-3">Audio Recitation</h2>
                                    <div class="audio-wrapper">
                                        <% 
                                            // Handle audio path similar to Angular app
                                            let audioSrc = verse.shlokPath;
                                            if (audioSrc.startsWith('assets/')) {
                                                audioSrc = '/' + audioSrc;
                                            } else if (!audioSrc.startsWith('http') && !audioSrc.startsWith('/')) {
                                                audioSrc = '/assets/' + audioSrc.replace(/^\/+/, '');
                                            }
                                        %>
                                        <audio controls controlsList="nodownload" id="verse-audio">
                                            <source src="<%= audioSrc %>" type="audio/mpeg">
                                            Your browser does not support the HTML5 Audio element.
                                        </audio>
                                    </div>
                                    <button type="button" class="btn btn-outline-primary btn-sm mt-2" onclick="toggleLoop()">
                                        <span id="loop-icon">üîÅ</span>
                                        <span class="ms-1" id="loop-text">Enable loop</span>
                                    </button>
                                </div>
                            <% } %>

                            <!-- Meaning -->
                            <% if (verse.meaning && verse.meaning.length > 0) { %>
                                <div>
                                    <h2 class="h5 text-primary fw-semibold mb-3">Meaning</h2>
                                    <div>
                                        <% verse.meaning.forEach((meaning, index) => { %>
                                            <% if (meaning.wordMeaningDetailRoute) { %>
                                                <a href="<%= meaning.wordMeaningDetailRoute %>" class="fw-semibold text-decoration-none link-primary">
                                                    <%= meaning.sanskrit %>
                                                </a>
                                            <% } else { %>
                                                <span class="fw-semibold"><%= meaning.sanskrit %></span>
                                            <% } %>
                                            <span>‚Äî <%= meaning.meaning %></span>
                                            <% if (index < verse.meaning.length - 1) { %><span>, </span><% } %>
                                        <% }); %>
                                    </div>
                                </div>
                            <% } %>

                            <!-- Translation -->
                            <% if (verse.translation && verse.translation.length > 0) { %>
                                <div>
                                    <h2 class="h5 text-primary fw-semibold mb-3">Translation</h2>
                                    <ul class="list-unstyled mb-0">
                                        <% verse.translation.forEach(translation => { %>
                                            <li class="mb-2">
                                                <span class="fw-semibold text-body"><%= translation.header %></span>
                                                <span class="text-body-secondary"> ‚Äî <%= translation.value %></span>
                                            </li>
                                        <% }); %>
                                    </ul>
                                </div>
                            <% } %>

                            <!-- Commentary -->
                            <% if (verse.commentary && verse.commentary.length > 0) { %>
                                <div>
                                    <h2 class="h5 text-primary fw-semibold mb-3">Commentary</h2>
                                    <div class="commentary-block">
                                        <% verse.commentary.forEach(line => { %>
                                            <div class="mb-3 <%= line.isShlokCommentary ? 'commentary-highlight' : '' %>">
                                                <%= line.value %>
                                            </div>
                                        <% }); %>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script>
        let loopEnabled = false;
        const audio = document.getElementById('verse-audio');
        
        function toggleLoop() {
            loopEnabled = !loopEnabled;
            if (audio) {
                audio.loop = loopEnabled;
            }
            
            const loopIcon = document.getElementById('loop-icon');
            const loopText = document.getElementById('loop-text');
            if (loopEnabled) {
                loopIcon.textContent = '‚èπÔ∏è';
                loopText.textContent = 'Disable loop';
            } else {
                loopIcon.textContent = 'üîÅ';
                loopText.textContent = 'Enable loop';
            }
        }
        
        if (audio) {
            audio.addEventListener('loadedmetadata', function() {
                // Audio loaded
            });
        }
    </script>
</body>
</html>
